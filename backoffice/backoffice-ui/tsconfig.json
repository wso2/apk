{
    "compilerOptions": {
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "target": "ES6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./client/source",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "client/public/build"
    ]
}